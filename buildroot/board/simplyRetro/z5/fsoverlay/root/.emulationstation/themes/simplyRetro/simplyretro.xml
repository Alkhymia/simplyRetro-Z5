<!-- https://github.com/zefie/EmulationStation/blob/master/THEMES.md -->

<theme>
	<formatVersion>4</formatVersion>
	<view name="system, basic, detailed, grid, video">	
		<image name="background">
			<color>000000</color>
			<path>./_inc/img/bg_color.png</path>
			<size>1 1</size>
			<pos>0 0</pos>
		</image>
	</view>

	<view name="system">		
		<text name="systemInfo">
			<fontPath>./_inc/font/OpenSans-Regular.ttf</fontPath>
			<fontSize>0.05</fontSize>
			<backgroundColor>00000000</backgroundColor>
			<color>FFFFFF</color>
			<alignment>center</alignment>
			<pos>0 0.25</pos>
			<size>1 1</size>
		</text>
		
		<carousel name="systemcarousel">
			<pos>0 0</pos>
			<size>1 1</size>
			<color>00000000</color>
			<maxLogoCount>1</maxLogoCount>
			<logoSize>0.5 0.5</logoSize>
		</carousel>
	</view>

	<view name="basic">
		<image name="logo">
			<pos>0.5 0.12</pos>
			<origin>0.5 0.5</origin>
			<size>0.25 0</size>
		</image>

		<textlist name="gamelist">
			<selectorColor>FFFFFF33</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
			<primaryColor>FFFFFF55</primaryColor>
			<secondaryColor>888888</secondaryColor>
			<fontPath>./_inc/font/OpenSans-Regular.ttf</fontPath>
			<fontSize >0.05</fontSize >
			<size>1 0.72y</size>
			<pos>0 0.24</pos>
		</textlist>
	</view>
</theme>
